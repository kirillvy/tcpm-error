{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "build",
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "jsx": "react",
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "files": ["./desktop.ts"],
    "include": [
        "./typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage"
    ]
}